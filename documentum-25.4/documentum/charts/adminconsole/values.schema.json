{
   "$schema": "http://json-schema.org/draft-07/schema",
   "required": [
       "images"
   ],
   "properties": {
       "images": {
           "type": "object",
           "properties": {
               "repository": {
                   "type": "string"
               },
               "name": {
                   "type": "string"
               },
               "tag": {
                   "type": "string"
               }
           }
       },
       "serviceType": {
           "type": "string",
           "enum": ["ClusterIP", "LoadBalancer", "NodePort"]
       }
   }
}